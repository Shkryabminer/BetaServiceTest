<?xml version="1.0" encoding="utf-8"?> 
  <RelativeLayout  xmlns:android ="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
<TextView
        android:layout_width ="wrap_content"
        android:layout_height="wrap_content"
        android:id = "@+id/tv_ID"
        style="@style/TextViewSignalAct"
        android:text = "ID:"     
        />
    <TextView
        android:id="@+id/tv_Act_Time"
        style="@style/TextViewSignalAct"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
    android:text="Actual time:"
        android:layout_below="@+id/tv_ID"
        />
    <TextView
        android:id="@+id/tv_comment"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
    style="@style/TextViewSignalAct"
    android:text="Comment:"
        android:layout_below="@+id/tv_Act_Time"
    />
    <TextView
        android:id="@+id/tv_pair"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
    style="@style/TextViewSignalAct"
    android:text="Pair:"
        android:layout_below="@+id/tv_comment"
    />
    <TextView
        android:id="@+id/tv_cmd"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
    style="@style/TextViewSignalAct"
    android:text="CMD:"
        android:layout_below="@+id/tv_pair"
    />
    <TextView
        android:id="@+id/tv_trading_System"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
    style="@style/TextViewSignalAct"
    android:text="Trading System:"
        android:layout_below="@+id/tv_cmd"
    />
    <TextView
        android:id="@+id/tv_period"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
    style="@style/TextViewSignalAct"
    android:text="Period:"
        android:layout_below="@+id/tv_trading_System"
    />
    <TextView
        android:id="@+id/tv_price"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
    style="@style/TextViewSignalAct"
    android:text="Price:"
        android:layout_below="@+id/tv_period"
    />
    <TextView
        android:id="@+id/tv_sl"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
    style="@style/TextViewSignalAct"
    android:text="SL:"
        android:layout_below="@+id/tv_price"
    />
    <TextView
        android:id="@+id/tv_tp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
    style="@style/TextViewSignalAct"
    android:text="TP:"
        android:layout_below="@+id/tv_sl"
    />
    <TextView
        android:id="@+id/tv_ID_Value"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        style="@style/TextViewSignalAct_Val"
        android:hint="ID"
        android:layout_alignBottom="@+id/tv_ID"          
    />
    <TextView
        android:id="@+id/tv_Act_Time_Value"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        style="@style/TextViewSignalAct_Val"
        android:hint="Actual Time"
        android:layout_alignBottom="@+id/tv_Act_Time"     
    />
    <TextView
        android:id="@+id/tv_comment_Value"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        style="@style/TextViewSignalAct_Val"
        android:hint="Comment"
        android:layout_alignBottom="@+id/tv_comment"              
    />
    <TextView
        android:id="@+id/tv_pair_Value"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        style="@style/TextViewSignalAct_Val"
        android:hint="EURUSD"
        android:layout_alignBottom="@+id/tv_pair"
    />
    <TextView
        android:id="@+id/tv_cmd_Value"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        style="@style/TextViewSignalAct_Val"
        android:hint="CMD"
        android:layout_alignBottom="@+id/tv_cmd"
    />
    <TextView
        android:id="@+id/tv_trading_System_Value"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        style="@style/TextViewSignalAct_Val"
        android:hint="System"
        android:layout_alignBottom="@+id/tv_trading_System"
    />
    <TextView
        android:id="@+id/tv_period_Value"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        style="@style/TextViewSignalAct_Val"
        android:hint="Period"
        android:layout_alignBottom="@+id/tv_period"
    />
    <TextView
        android:id="@+id/tv_price_Value"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        style="@style/TextViewSignalAct_Val"
        android:hint="Price"
        android:layout_alignBottom="@+id/tv_price"
    />
    <TextView
        android:id="@+id/tv_sl_Value"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        style="@style/TextViewSignalAct_Val"
        android:hint="SL"
        android:layout_alignBottom="@+id/tv_sl"
    />
    <TextView
        android:id="@+id/tv_tp_Value"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        style="@style/TextViewSignalAct_Val"
        android:hint="TP"
        android:layout_alignBottom="@+id/tv_tp"
    />
</RelativeLayout>